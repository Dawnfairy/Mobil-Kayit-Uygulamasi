<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobil.OgrenciSayfasi"
             Title=" ">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="1" BackgroundColor="WhiteSmoke">
            <StackLayout BackgroundColor="DimGray"  Orientation="Vertical" Padding="40,40,40,40" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center" Scale="1" >


                <Button Margin="0,10,0,0" Text="Öğrenci Bilgi Sayfası" x:Name="ÖğrenciBilgi" Clicked="ÖğrenciBilgiButon" VerticalOptions="Center"
              
                        BackgroundColor="DarkMagenta"
                        TextColor="White" FontSize="16"  />

                <Button Margin="0,10,0,0" Text="Öğrenci Kaydını Sil" x:Name="KayıtSil" Clicked="KayıtSilButon"
              
                        BackgroundColor="DarkMagenta"
                        TextColor="White" FontSize="16" />



            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>