<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobil.AdminGiris">
    <ContentPage.Content>

        <ScrollView Grid.Row="1" BackgroundColor="WhiteSmoke">
            <StackLayout BackgroundColor="DimGray"  Orientation="Vertical" Padding="25,20,25,20" Spacing="10" VerticalOptions="Center" HorizontalOptions="Center" Scale="1"   >

                <Entry Placeholder="Admin Kodunu Giriniz" PlaceholderColor="White" 
                       TextColor="White"  
                       HorizontalOptions="FillAndExpand" 
                   x:Name="AdminŞifre"
                  
                   IsPassword="True"/>

                <Button  Margin="0,10,0,0" Text="                      Giriş Yap                      "  x:Name="GirişYap" Clicked="Admin_Sayfasi" VerticalOptions="Center"
                   BackgroundColor="DarkMagenta"
                        TextColor="White" FontSize="16" FontAttributes="Bold"/>

            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>